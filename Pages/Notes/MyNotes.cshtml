@page
@model NotesApp.Pages.MyNotesModel
@{
    ViewData["Title"] = "MyNotes";
}

<div class="container body-content">
    
    <div class="panel-header search-item-form">
        <table class="table">
            <thead>
                <tr>
                    <th><form method="post">
                            <center>
                                <h1>enter title for search</h1>
                                <input type="text" id="title" name="title" value="" />
                                <input type="submit" asp-page-handler="FilterByTitle" value="find" />
                            </center>
                        </form>
                    </th>
                    <th>
                        <form method="get" action="/Notes/NewNote">
                            <center>
                                <h1>tap here to create a new note</h1>
                                <input type="submit" value="create" />
                            </center>
                        </form>
                    </th>
                </tr>
            </thead>
        </table>
    </div>
    
        <br />
        <br />
        <div class="panel panel-default notes-panel">
            <div class="panel-heading">notes list</div>

            <table class="table">
                <thead>
                    <tr><th>identicon</th><th>title</th><th></th></tr>
                </thead>
                <tbody>
                    @foreach (var note in Model.Notes)
                    {
                    <tr>
                        <td><img src="@note?.ImgSrc" width="50" height="50" /></td>
                        <td>@note?.Title</td>
                        <td>
                            <form method="post">
                                <a asp-page="JustNote" asp-route-id="@note.Id">watch note</a>
                            </form>
                        </td>
                        <td>
                            <button type="submit" asp-page-handler="delete" asp-route-id="@note.Id">
                                delete
                            </button>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
</div>

